{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ On Mac",
			"command": "/usr/bin/clang++",
			"args": [
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-g",
				"-std=c++20",
				"${file}",
				"-o",
				"${workspaceFolder}/target/main"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "编译器: /usr/bin/clang++"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe On Windows",
			"command": "c:\\ENVIRONMENT\\CPP_ENVS\\mingw64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-std=c++20",
				"-o",
				"${workspaceFolder}/target/main.exe"
			],
			"options": {
				"cwd": "c:\\ENVIRONMENT\\CPP_ENVS\\mingw64\\bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: c:\\ENVIRONMENT\\CPP_ENVS\\mingw64\\bin\\g++.exe"
		}
	]
}